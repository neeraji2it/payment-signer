<% @page_title = "Payment" %>

<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-info">
    <div class="panel-heading">
      <h4>Enter Payment Information</h4>
    </div>

    <%= simple_form_for @payment do |f| %>
      <div class="panel-body">
        <div class="input-group">
          <span class="input-group-addon glyphicon glyphicon-shopping-usd">$</span>
          <%= f.input :amount, placeholder: "amount", class: "form-control input-lg", label: false %>
          <span class="input-group-addon">.00</span>
        </div><br/>
        
        <div class="input-group">
          <span class="input-group-addon glyphicon glyphicon-shopping-cart"></span>
          <%= f.input :product_name, placeholder: "ProductName", class: "form-control input-lg", label: false %>
        </div><br/>
        
        <div class="input-group">
          <span class="input-group-addon glyphicon glyphicon-user"></span>
          <%= f.input :customer_name, placeholder: "Customer Name", class: "form-control input-lg", label: false %>
        </div><br/>

        <div class="input-group">
          <span class="input-group-addon glyphicon glyphicon-calendar"></span>
          <%= f.input :date_of_birth, as: :string, input_html: { class: "datepicker" }, placeholder: "Date of Birth", class: "form-control input-lg", label: false %>
        </div><br/>
        
        <div class="input-group">
          <span class="input-group-addon glyphicon glyphicon-home"></span>
          <%= f.input :address, placeholder: "Address", class: "form-control input-lg", label: false %>
        </div><br/>
        
        <div class="input-group">
          <span class="input-group-addon glyphicon glyphicon-road"></span>
          <%= f.input :city, placeholder: "City", class: "form-control input-lg", label: false %>
        </div><br/>
        
        <div class="input-group">
          <span class="input-group-addon glyphicon glyphicon-globe"></span>
          <%= f.input :state, placeholder: "State", class: "form-control input-lg", label: false %>
        </div><br/>
        
        <div class="input-group">
          <span class="input-group-addon glyphicon glyphicon-globe"></span>
          <%= f.input :post_code, placeholder: "Postcode", class: "form-control input-lg", label: false %>
        </div><br/>
        
        <div class="input-group">
          <span class="input-group-addon glyphicon glyphicon-flag"></span>
          <%= f.input :country, placeholder: "Country", class: "form-control input-lg", label: false, prompt: "Select Country" %>
        </div><br/>
        
        <div class="input-group">
          <span class="input-group-addon glyphicon glyphicon-phone"></span>
          <%= f.input :phone, placeholder: "Phone", class: "form-control input-lg", label: false %>
        </div><br/>
        
        <div class="input-group">
          <span class="input-group-addon glyphicon glyphicon-envelope"></span>
          <%= f.input :email, placeholder: "Email", class: "form-control input-lg", label: false %>
        </div><br/>
        
        <div class="input-group">
          <span class="input-group-addon glyphicon glyphicon-credit-card"></span>
          <%= f.input :card_number, placeholder: "CardNumber", class: "form-control input-lg", label: false %>
        </div><br/>

        <div class="input-group">
          <span class="input-group-addon glyphicon glyphicon-calendar"></span>
          <%= f.input :card_expiry, placeholder: "CardExpiry", class: "form-control input-lg", label: false %>
        </div><br/>

        <div class="input-group">
          <span class="input-group-addon glyphicon glyphicon-credit-card"></span>
          <%= f.input :card_cvv, placeholder: "CardCvv", class: "form-control input-lg", label: false %>
        </div><br/>
      </div>

      <div class="panel-footer">
        <%= f.submit "Submit", class: 'btn btn-sm btn-primary' %>
        <% if current_user %>
          <%= link_to 'View All Payments', payments_path, class: 'btn btn-sm btn-default pull-right' %>
        <% end %>
      </div>        
    <%end%>
  </article>
</section>


